<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>MicNoiseGate</title>
    <organization>com.micnoisegate</organization>
    <license file="License.txt"/>
    <welcome file="Welcome.html"/>
    <conclusion file="Conclusion.html"/>

    <domains enable_anywhere="false" enable_currentUserHome="false" enable_localSystem="true"/>

    <options customize="never" require-scripts="false" hostArchitectures="x86_64,arm64"/>

    <background file="background.png" alignment="bottomleft" scaling="none"/>

    <choices-outline>
        <line choice="default">
            <line choice="com.micnoisegate.app"/>
            <line choice="com.micnoisegate.driver"/>
        </line>
    </choices-outline>

    <choice id="default"/>

    <choice id="com.micnoisegate.app" visible="true" title="MicNoiseGate Application">
        <pkg-ref id="com.micnoisegate.app"/>
    </choice>

    <choice id="com.micnoisegate.driver" visible="true" title="MicNoiseGate Audio Driver">
        <pkg-ref id="com.micnoisegate.driver"/>
    </choice>

    <pkg-ref id="com.micnoisegate.app" version="1.0.0" onConclusion="none">MicNoiseGate-App.pkg</pkg-ref>
    <pkg-ref id="com.micnoisegate.driver" version="1.0.0" onConclusion="none">MicNoiseGate-Driver.pkg</pkg-ref>
</installer-gui-script>
